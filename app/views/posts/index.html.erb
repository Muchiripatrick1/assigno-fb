<p id="notice"><%= notice %></p>

<h1>posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>content</th>
      <th>image</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.image %></td>
        <td><%= link_to 'show', post %></td>
        <td><%= link_to 'edit', edit_post_path(post) %></td>
        <td><%= link_to 'delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'new post', new_post_path %>